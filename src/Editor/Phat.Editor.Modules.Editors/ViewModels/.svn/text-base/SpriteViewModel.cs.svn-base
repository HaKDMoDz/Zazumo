using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Windows.Media;

namespace Phat.Editor.Modules.Editors.ViewModels
{
    public class SpriteViewModel
    {
        private String _spriteKey;
        public String SpriteKey
        {
            get { return _spriteKey; }
            set
            {
                if (_spriteKey == value)
                    return;

                _spriteKey = value;
            }
        }

        private ImageSource _spriteImage;
        public ImageSource SpriteImage
        {
            get { return _spriteImage; }
            set
            {
                this._spriteImage = value;
            }
        }

        private Boolean _isFlippedHorizontally;
        public Boolean IsFlippedHorizontally
        {
            get { return _isFlippedHorizontally; }
            set
            {
                this._isFlippedHorizontally = value;
            }
        }

        private Boolean _isFlippedVertially;
        public Boolean IsFlippedVertically
        {
            get { return _isFlippedVertially; }
            set
            {
                this._isFlippedVertially = value;
            }
        }
    }
}
